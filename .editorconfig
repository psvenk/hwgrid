root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{tex,cls}]
indent_style = tab

# For versions up to 1.4
[{0..1}.{1..4}/**.{tex,cls}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.md]
indent_style = space
indent_size = 4
max_line_length = 80
